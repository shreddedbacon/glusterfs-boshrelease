# abort script on any command that exits with a non zero value
set -e

export PACKAGES=/var/vcap/packages
export PATH=$PACKAGES/gluster-build-deps/bin:$PACKAGES/gluster-build-tools/bin:$PACKAGES/python/bin:$PATH

tar xzf glusterfs/glusterfs-5.3.tar.gz
cd glusterfs-5.3
touch configure
LDFLAGS=-L$PACKAGES/gluster-build-deps/lib CFLAGS=-I$PACKAGES/gluster-build-deps/include ./configure --prefix=$BOSH_INSTALL_TARGET --disable-tiering
LDFLAGS=-L$PACKAGES/gluster-build-deps/lib CFLAGS=-I$PACKAGES/gluster-build-deps/include make install
